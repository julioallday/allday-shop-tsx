{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  // Add those two lines:
  "editor.formatOnSave": true, // Tell VSCode to format files on save
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Tell VSCode to use Prettier as default file formatter
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#740065",
    "activityBar.activeBorder": "#130080",
    "activityBar.background": "#4b1a49",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#800080",
    "activityBarBadge.foreground": "#e7e7e7",
    "sash.hoverBorder": "#19044b",
    "statusBar.background": "#3f093c",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#330831",
    "statusBarItem.remoteBackground": "#33082f",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#330833",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#2e0833",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.remoteColor": "#410000",
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
}
